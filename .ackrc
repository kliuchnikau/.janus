--type-add=ruby=.rake
--type-add=html=.html.erb,.html.haml,.haml,.html.slim,.slim
--type-add=css=.sass,.less,.scss
--type-add=js=.coffee
--type-set=cucumber=.feature
--type-set=minifiedfiles=.min.js,.min.css
--type-set=rabl=.rabl
--type-set=yml=.yml
--nominifiedfiles

--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=coverage
--ignore-dir=tmp
--ignore-dir=.idea
--ignore-dir=bin
--ignore-dir=app/assets/stylesheets/m/lib
--ignore-dir=app/assets/javascripts/m/lib
--ignore-dir=.sass-cache
--ignore-dir=tinymce
--ignore-dir=public/csv
--ignore-dir=public/system
--ignore-dir=db/seeds

--ignore-file=ext:bak
--ignore-file=ext:pdf
--ignore-file=ext:md
--ignore-file=match:/[._].*\.swp$/
--ignore-file=match:/^tags$/
--ignore-file=match:/(plugins|addthis_widget.*)\.js/
--ignore-file=match:/^metadata\.json$/

--sort-files
--color
